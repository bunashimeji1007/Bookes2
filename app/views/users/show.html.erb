<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @newbook %>
    <div class="col-xs-9">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-img" %>
                <% end %>
                </td>
              <td><%= link_to book do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
              <td><%= link_to 'Show', book %></td>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>