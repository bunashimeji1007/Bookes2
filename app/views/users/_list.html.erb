<div class="col-xs-3">
  <p id="notice"><%= notice %></p>
  <% if book.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <h2><%= book.errors.count %>error</h2>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h2>User info</h2>
    <div class="profile-container">
        <table class="table table-striped">
          <thead>
            <tr><%= attachment_image_tag user, :profile_image, size:"60x60", class: "img-circle pull-left profile-img", fallback:"no_image.jpg" %></tr>
            <tr>
              <th>name</th>
              <th><h6 class="profile-name"><%= user.name %></h6></th>
              <th colspan="3"></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><h6 class="profile-introduction"><%= user.introduction %></h6></th>
            </tr>
          </thead>
        </table>
        <button type="button" class="btn btn-default" aria-label="Left Align">
          <span class="glyphicon glyphicon-wrench" aria-hidden="true">
          <%= link_to 'Edit', edit_user_path(user) %>
          </span>
        </button>
    </div>
  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <br><%= f.submit 'Create Book' %>
  <% end %>
</div>