<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @newbook %>
      <div class="col-xs-9">
        <h3>Book detail</h3>
        <table class="table table-striped">
          <thead>
            <tr>
      	      <th>
                <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-img" %>
                <br><br><%= @user.name %>
                <% end %>
              </th>
      	      <th><p><%= @book.title %></p></th>
              <th><p><%= @book.body %></p></th>
                <%if @user.id == current_user.id %>
              <th>
                <button type="button" class="btn btn-success">
                <%= link_to 'Edit', edit_book_path(@book) %></button>
              </th>
              <th>
            <button type="button" class="btn btn-danger">
            <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' } %></button>
          </th>
        <% end %>
      </tr>
    </thead>
  </table>
</div>
</div>
</div>