<div class="col-lg-4"></div>
<div class="col-lg-8">
  <p id="notice"><%= notice %></p>
  <h2>Editing Book</h2>
  <% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <h2><%= @book.errors.count %>error</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <br><%= f.submit 'Update Book' %>
  <% end %>
  <%= link_to 'Show', book_path(@book) %>
  <%= link_to 'Back', books_path %>
</div>